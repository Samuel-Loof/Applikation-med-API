@page
@model IndexModel
@inject Applikation_med_API.Data.AccessControl accessControl
@{
    ViewData["Title"] = "Home page";
}

<h1>Welcome, @accessControl.LoggedInAccountName!</h1>

<a href="/ShoppingCart">View Shopping Cart</a> 

<h2>Products</h2>
@if (Model.Products != null && Model.Products.Count > 0)
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <h3>@product.Name</h3>
                <img src="" alt="Image of @product.Name" />
                <p>@product.Description</p>
                <p>Price: @product.Price</p>
                <p>Category: @product.Category</p>
                <!-- Add to cart button -->
                <form method="post" asp-page="/ShoppingCart" asp-page-handler="OnPostAddToCartAsync">
                    <input type="hidden" name="productId" value="@product.ProductId" />
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No products found.</p>
}
