<!-- pagination-->
<nav aria-label="Page navigation">
    <ul class="pagination">
        
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <form method="get" asp-page="/Index">
                    <button type="submit" class="btn btn-primary" name="currentPage" value="@(Model.CurrentPage - 1)">Previous</button>
                </form>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {

            <!-- Next page link-->

            <li class="page-item">
                <form method="get" asp-page="/Index">
                    <button type="submit" class="btn btn-primary" name="currentPage" value="@(Model.CurrentPage + 1)">Next</button>
                </form>
            </li>
        }
    </ul>
</nav>

