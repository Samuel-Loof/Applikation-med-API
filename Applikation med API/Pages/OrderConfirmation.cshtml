@page
@model OrderConfirmationModel

<h2>Orderbekräftelse</h2>
<p>Tack för ditt köp! Här är detaljerna för din beställning:</p>

@if (Model.OrderItems != null && Model.OrderItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Produktnamn</th>
                <th>Pris</th>
                <th>Kvantitet</th>
                <th>Totalt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.Price.ToString("0.##")) kr</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("0.##")) kr</td>
                </tr>
            }
            <tr>
                <td colspan="3" style="text-align:right"><strong>Totalt pris:</strong></td>
                <td><strong>@Model.TotalPrice.ToString("0.##") kr</strong></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>Det finns inga produkter i beställningen.</p>
}

<!-- Button to return to the main page -->
<a href="/" class="btn btn-primary">Tillbaka till huvudsidan</a>
