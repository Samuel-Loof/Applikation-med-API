@page
@model Applikation_med_API.Pages.CartModel

<h2>Varukorg</h2>

@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Produktnamn</th>
                <th>Pris</th>
                <th>Kvantitet</th>
                <th>Totalt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.CartItems)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@(product.Price.ToString("0.##")) kr</td>
                    <td>@product.Quantity</td>
                    <td>@((product.Price * product.Quantity).ToString("0.##")) kr</td>
                    <td>
                        <!-- Form to remove an item from the cart -->
                        <form method="post" asp-page-handler="RemoveProduct">
                            <input type="hidden" name="productId" value="@product.ID" />
                            <button type="submit" class="btn btn-danger">Ta bort produkt</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Form to clear the cart -->
    <form method="post" asp-page-handler="ClearCart">
        <button type="submit" class="btn btn-warning">Rensa varukorgen</button>
    </form>
}
else
{
    <p>Din varukorg är tom.</p>
}

<!-- Button to go back to the main page -->
<a href="/" class="btn btn-primary">Tillbaka till huvudsidan</a>
