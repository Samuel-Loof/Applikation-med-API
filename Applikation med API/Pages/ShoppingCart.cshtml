@page
@model Applikation_med_API.Pages.CartModel

<h2>Varukorg</h2>

@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.CartItems)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@(product.Price * product.Quantity)</td>
                    <td>
                        <!-- Form to remove an item from the cart -->
                        <form method="post" asp-page-handler="RemoveItem">
                            <input type="hidden" name="productId" value="@product.ID" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Form to clear the cart -->
    <form method="post" asp-page-handler="ClearCart">
        <button type="submit" class="btn btn-warning">Clear Cart</button>
    </form>
}
else
{
    <p>Din varukorg är tom.</p>
}
